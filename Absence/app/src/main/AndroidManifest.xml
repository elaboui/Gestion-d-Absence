<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="assistant.genuinecoder.gestionAbsence">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mini.projet.gestionAbsence.main.AppAcceuil"></activity>
        <activity android:name="mini.projet.gestionAbsence.main.splash_Time"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mini.projet.gestionAbsence.main.profile.ProfileActivity"
            android:parentActivityName="mini.projet.gestionAbsence.main.AppAcceuil" />
        <activity
            android:name="mini.projet.gestionAbsence.main.profile.StudentRegistration"
            android:parentActivityName="mini.projet.gestionAbsence.main.profile.ProfileActivity" />

        <activity
            android:name="mini.projet.gestionAbsence.main.presence.PresenceActivity"
            android:parentActivityName="mini.projet.gestionAbsence.main.AppAcceuil" />

        <activity
            android:name="mini.projet.gestionAbsence.main.planificateur.Planificateur"
            android:parentActivityName="mini.projet.gestionAbsence.main.AppAcceuil" />
        <activity
            android:name="mini.projet.gestionAbsence.main.planificateur.CreatePlanificateurActivity"
            android:parentActivityName="mini.projet.gestionAbsence.main.planificateur.Planificateur" />
        <activity
            android:name="mini.projet.gestionAbsence.main.profile.EditStudentActivity"
            android:parentActivityName="mini.projet.gestionAbsence.main.AppAcceuil" />
    </application>

</manifest>